{
  "source": "./src",
  "includes": [
    "index.js",
    "sdk.js",
    "user.js"
  ],
  "destination": "./docs",
  "plugins": [
    {
      "name": "esdoc-standard-plugin",
      "option": {
        "brand": {
          "logo": "./assets/images/logo.png",
          "title": "Muxy Extensions SDK",
          "description": "The missing backend to Twitch Extensions",
          "repository": "https://github.com/muxy/muxyextensionssdk",
          "site": "https://dev.muxy.io",
          "author": "Muxy, Inc"
        }
      },
      "test": {
        "source": "./spec/",
        "interfaces": [
          "describe",
          "it",
          "context",
          "suite",
          "test"
        ],
        "includes": [
          "(spec|Spec|test|Test)\\.js$"
        ],
        "excludes": [
          "\\.config\\.js$"
        ]
      }
    }
  ]
}
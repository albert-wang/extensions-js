{
  "extends": ["tslint:latest", "tslint-config-prettier"],

  "linterOptions": {
    "exclude": [
      "**/*.d.ts",
      "__tests__/**/*.ts"
    ]
  },

  "rules": {
    // Use single quote marks, unless it's inconvenient.
    "quotemark": [true, "single", "avoid-escape", "avoid-template"],

    // Never use `I` to start the name of an interface.
    "interface-name": [true, "never-prefix"],

    // More than 5 classes in a file just seems excessively confusing.
    "max-classes-per-file": [true, 5, "exclude-class-expressions"],

    "max-line-length": [true, 120]
  }
}

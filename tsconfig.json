{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "noImplicitAny": false,
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "allowJs": false,
    "traceResolution": true,
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "types"],
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/@types"]
}

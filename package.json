{
  "name": "@muxy/extensions-js",
  "author": "Muxy, Inc.",
  "version": "1.1.0",
  "license": "ISC",
  "repository": "https://github.com/muxy/extensions-js",
  "description": "Provides easy access to Muxy's powerful backend architecture for Twitch extensions.",
  "main": "dist/muxy-extensions.umd.js",
  "module": "dist/muxy-extensions.es5.js",
  "typings": "dist/types/muxy-extensions.d.ts",
  "scripts": {
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "dev": "rollup -c rollup.config.ts -w",
    "build": "tsc --module commonjs && rollup -c rollup.config.ts && typedoc --out dist/docs --target es6 --theme minimal --mode file src",
    "test": "jest",
    "test:integration": "jest spec/*.js",
    "test:integration_server": "./run_integration_tests.sh",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "prebuild": "rimraf dist",
    "precommit": "lint-staged",
    "prepublish": "npm run build"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write --single-quote",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": true,
    "verbose": true
  },
  "peerDependencies": {
    "base-64": "^0.1.0",
    "parse-headers": "^2.0.1",
    "pusher-js": "^4.2.2"
  },
  "devDependencies": {
    "@types/jest": "^23.1.1",
    "@types/node": "^10.3.4",
    "colors": "^1.3.0",
    "commitizen": "^2.9.6",
    "coveralls": "^3.0.1",
    "cross-env": "^5.1.5",
    "cz-conventional-changelog": "^2.1.0",
    "gumshoe": "^0.2.1",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "lint-staged": "^7.1.0",
    "prettier": "^1.13.5",
    "prompt": "^1.0.0",
    "regenerator-runtime": "^0.11.1",
    "replace-in-file": "^3.4.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.61.1",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.17.0",
    "semantic-release": "^15.4.1",
    "sinon": "^5.0.7",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.1.2",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.12.0",
    "typedoc": "^0.11.1",
    "typescript": "^2.9.2",
    "validate-commit-msg": "^2.14.0"
  },
  "dependencies": {
    "pusher-js": "^4.3.0"
  }
}
